<div id="comment-list">
  <% if (typeof comments !== 'undefined' && Array.isArray(comments) && comments.length > 0) { %>
  <% comments.forEach((comment) => { %>
  <%- include('comment-item', { comment }) %>
  <% }); %>
  <% } %>
</div>

<% if (comments.length === 0) { %>
<p id="no-comments">No comments</p>
<% } %>
